<script>
    function ajaxLoad(name,type) {
        var url = "/interaction/ajaxLoad";
        $.ajax({
            type: "POST",
            data: {type:type},
            url: url,
            success: function(data) {
                if(data != undefined) {
                    //alert(1);
                    var result = data.result;
                    if(result != undefined) {
                        var arr = [];
                        //arr.push("<li class='fix'><a href='#' class='getinto'>进入课堂</a> <a href='#'>进入课堂</a></li> ");
                        for (var i=0;i<result.length;i++)
                        {
                            var item = result[i];
                            if(item != undefined) {
                                arr.push("<li class='fix'><a href='#' class='getinto'>进入课堂</a> <a href='#'>"+item.paperName+"</a></li> ");
                            }
                        }
                        $("#"+name).html(arr.join(''));
                    }
                }
            }
        });
    }
</script>


