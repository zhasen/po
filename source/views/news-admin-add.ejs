<%- layout('layout') %>
<div class="container" style="margin-top: 10px;">
    <form class="form-horizontal" method="post" style="margin-top: 20px;">
        <div class="control-group">
            <label class="control-label" for="inputEmail">标题</label>
            <div class="controls">
                <input type="text" name="title" required id="inputEmail" placeholder="请输入标题">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword">内容</label>
            <div class="controls">
                <textarea required style="width: 500px;height: 150px;" name="content"></textarea>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword">发给</label>
            <div class="controls">
                <select name="to">
                    <option value="1">学生</option>
                    <option value="2">老师</option>
                    <option value="5">游客</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn btn-success">发布</button>
            </div>
        </div>
    </form>
</div>
